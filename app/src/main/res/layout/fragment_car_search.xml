<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SearchCarFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Manufacturer">

            <AutoCompleteTextView
                android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:inputType="none"
                android:text="Toyota"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Transmission">

            <AutoCompleteTextView
                android:layout_marginLeft="5dp"
                android:id="@+id/transmission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:text="Automatic"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Type">

            <AutoCompleteTextView
                android:layout_marginRight="5dp"
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:text="Sedan"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="Car Model"
            android:id="@+id/BikeModel"
            ></EditText>

    </LinearLayout>

    <TextView
        android:id="@+id/priceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range"
        android:textColor="@color/HS"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        ></TextView>
    <TextView
        android:id="@+id/priceBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textColor="@color/HS"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
        ></TextView>

    <SeekBar
        android:id="@+id/priceSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="50000"
        android:min="0"
        android:progress="5000"
        android:progressTint="@color/HS"
        android:thumbTint="@color/HS"
        android:layout_gravity="center"
        ></SeekBar>

    <TextView
        android:id="@+id/locationRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Radius"
        android:textColor="@color/HS"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        ></TextView>
    <TextView
        android:id="@+id/locationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 km"
        android:textColor="@color/HS"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
        ></TextView>

    <SeekBar
        android:id="@+id/locationSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="30"
        android:min="1"
        android:progress="5"
        android:progressTint="@color/HS"
        android:thumbTint="@color/HS"
        android:layout_gravity="center"
        ></SeekBar>



</LinearLayout>