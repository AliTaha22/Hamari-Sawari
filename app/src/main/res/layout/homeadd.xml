<LinearLayout

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white">




    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageview"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile"
        android:layout_marginBottom="10dp"
        ></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Manufacturer"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/priceview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Manufacturer"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/manufacturerview"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Condition"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Milage"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Condition"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/conditionview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Milage"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/milageview"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/modelview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/typeview"
            ></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="10dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:textColorHint="#504E4E"
        android:textColor="@color/black"
        ></TextView>
    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="Description"
        android:textColor="@color/black"
        android:id="@+id/discriptionview"></TextView>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="view more details"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/book"
        android:background="@drawable/mybtn"
        android:layout_marginBottom="5dp"
        ></Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"/>

</LinearLayout>