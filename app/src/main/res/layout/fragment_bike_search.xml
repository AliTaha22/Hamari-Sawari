<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragments.SearchBikeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Manufacturer">

            <AutoCompleteTextView
                android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:layout_marginRight="5dp"
                android:text="Honda"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Engine">

            <AutoCompleteTextView
                android:id="@+id/engine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:inputType="none"
                android:text="70"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="Color">

            <AutoCompleteTextView
                android:id="@+id/color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:inputType="none"
                android:text="Red"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:hint="Bike Model"
            android:id="@+id/BikeModel"
            android:inputType="number"
            ></EditText>
    </LinearLayout>
    <TextView
        android:id="@+id/priceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range"
        android:textColor="@color/HS"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        ></TextView>
    <TextView
        android:id="@+id/priceBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textColor="@color/HS"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
        ></TextView>

    <SeekBar
        android:id="@+id/priceSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="10000"
        android:min="0"
        android:progress="5000"
        android:progressTint="@color/HS"
        android:thumbTint="@color/HS"
        android:layout_gravity="center"
        ></SeekBar>

    <TextView
        android:id="@+id/locationRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Radius"
        android:textColor="@color/HS"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        ></TextView>
    <TextView
        android:id="@+id/locationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 km"
        android:textColor="@color/HS"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">
        ></TextView>

    <SeekBar
        android:id="@+id/locationSeekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="30"
        android:min="1"
        android:progress="5"
        android:progressTint="@color/HS"
        android:thumbTint="@color/HS"
        android:layout_gravity="center"
        ></SeekBar>
    <Button
        android:id="@+id/btnSearchVh"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Search"
        android:backgroundTint="@color/HS"
        android:background="@drawable/mybtn"></Button>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
