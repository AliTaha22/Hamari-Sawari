<LinearLayout

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/uimageview"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile"
        android:layout_marginBottom="10dp"
        ></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/unameview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/uageview"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/ugenderview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/ucontactview"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="143dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/uusernameview"
            ></TextView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/uidview"
            ></TextView>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Rating"
        android:textSize="10dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:textColorHint="#504E4E"
        android:textColor="@color/black"
        ></TextView>
    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="Rating"
        android:textColor="@color/black"
        android:id="@+id/uratingview"></TextView>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Block"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/ublock"
        android:background="@drawable/mybtn"
        android:layout_marginBottom="5dp"
        ></Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"/>

</LinearLayout>