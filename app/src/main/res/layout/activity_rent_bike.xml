<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RentBike">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bikePicture"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginBottom="10dp"
            android:background="#EFEDED"
            android:src="@drawable/ic_addpicture"></ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Manufacturer">

                <AutoCompleteTextView
                    android:id="@+id/manufacturerBike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:layout_marginRight="5dp"
                    android:text="Honda"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Engine">

                <AutoCompleteTextView
                    android:id="@+id/engineBike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:inputType="none"
                    android:text="70"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Color">

                <AutoCompleteTextView
                    android:id="@+id/colorBike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:inputType="none"
                    android:text="Red"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Seating Capacity">

                <AutoCompleteTextView
                    android:id="@+id/seatingCapacityBike"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="Bike Delivery">

            <AutoCompleteTextView
                android:id="@+id/deliveryBike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:layout_marginRight="5dp"
                android:text="Available"
                android:textColor="@color/black"
                android:textColorHint="@color/black">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:hint="Engine Number"
                android:id="@+id/enginenumberBike"
                android:layout_marginRight="5dp"
                ></EditText>
            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:hint="Number Plate"
                android:id="@+id/numberplateBike"
                android:layout_marginLeft="5dp"
                ></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:hint="Mileage"
                android:inputType="number"
                android:id="@+id/mileageBike"
                ></EditText>
            <EditText
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Bike Model"
                android:inputType="number"
                android:id="@+id/modelBike"
                ></EditText>

        </LinearLayout>
        <EditText
            android:layout_width="175dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Price (PKR)"
            android:inputType="number"
            android:id="@+id/rentingPriceBike"
            ></EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:hint="Enter Description about your vehicle"
            android:id="@+id/BikeDis"
            android:gravity="center"
            android:layout_gravity="center"
            ></EditText>

        <Button
            android:id="@+id/uploadBike"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Upload"
            android:backgroundTint="@color/HS"
            android:background="@drawable/mybtn"></Button>
    </LinearLayout>
</ScrollView>