<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MoreDetailsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            cardPreventCornerOverlap="false">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/renterPicture"
                android:src="@drawable/ic_profile"
                ></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/renterUsername"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Renter username"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                ></TextView>

            <RatingBar
                android:id="@+id/renterRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                ></RatingBar>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="City"
                android:textSize="10dp"
                android:textColor="#504E4E"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:id="@+id/renterCity"
                ></TextView>

        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/vehicleImage"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="#EFEDED"
        android:src="@drawable/ic_addpicture"></ImageView>

    <TextView
        android:id="@+id/vehName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Name Here"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:hint="Manufacturer"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="Seating Capacity"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Manufacturer"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/vehManufacturer"
            ></TextView>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/vehPrice"
            ></TextView>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="S-Capacity"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/seatingCapacity"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:hint="Transmission"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="65dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Transmission"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/vehTransmission"
            ></TextView>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/vehModel"
            ></TextView>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:textColorHint="#504E4E"
            android:textColor="@color/black"
            android:id="@+id/vehType"
            ></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/HS"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        ></TextView>

    <TextView
        android:id="@+id/vehDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        ></TextView>
    <Button
        android:id="@+id/contactRenter"
        android:layout_marginTop="5dp"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="contact renter"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:background="@drawable/mybtn"
        ></Button>
</LinearLayout>